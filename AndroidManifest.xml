<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.forwardmobile.tforwardpayment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.forwardmobile.tforwardpayment.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.MainListActivity"
            android:label="@string/title_activity_main_list" >
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.MainAccessActivity"
            android:label="@string/title_access_activity" >
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.MainActivityFlat"
            android:label="@string/title_activity_main_list" >
        </activity>
        <activity
            android:name=".reports.BalanceActivity"
            android:label="@string/title_balance" >
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.PaymentActivity"
            android:label="@string/data_entry_label" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.OperatorsActivity"
            android:label="@string/title_activity_operators" >
        </activity>

        <activity
            android:name="ru.forwardmobile.tforwardpayment.OperatorsMenuActivity"
            android:label="@string/title_activity_operators" >
        </activity>

        <service android:name=".TPaymentService" />

        <activity
            android:name=".reports.SimplePaymentListActivity"
            android:label="@string/title_activity_payment_list_impl" >
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>
