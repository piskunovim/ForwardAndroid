<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.forwardmobile.tforwardpayment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Выводит телефон из состояния сна, когда  получено сообщение. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Создает пользовательское разерешение, чтобы только это приложение могло получить его сообщения. -->
    <permission
        android:name="ru.forwardmobile.tforwardpayment.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="ru.forwardmobile.tforwardpayment.permission.C2D_MESSAGE" />

    <!-- Это приложение имеет разрешение на регистрацию и получение данных. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Разрешение на проверку статуса соединения интернет-сетью -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Разрешение на вибрацию -->
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.forwardmobile.tforwardpayment.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.MainAccessActivity"
            android:label="@string/title_access_activity" >
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.MainActivityFlat"
            android:label="@string/title_activity_main_list" >
        </activity>
        <activity
            android:name=".reports.BalanceActivity"
            android:label="@string/title_balance" >
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.PaymentActivity"
            android:label="@string/data_entry_label" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.DataEntryActivity"
            android:label="@string/data_entry_label" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="ru.forwardmobile.tforwardpayment.OperatorsMenuActivity"
            android:label="@string/title_activity_operators" >
        </activity>

        <service android:name=".TPaymentService" />

        <activity
            android:name=".reports.SimplePaymentListActivity"
            android:label="@string/title_activity_payment_list_impl" >
        </activity>
        <activity
            android:name="ru.forwardmobile.tforwardpayment.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Получает сообщения. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Получает регистрационный id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="ru.forwardmobile.tforwardpayment" />
            </intent-filter>
        </receiver>

        <service android:name=".GCMIntentService" />

    </application>

</manifest>
