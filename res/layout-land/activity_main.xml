<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_main_container"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#CCC"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <!-- Обертка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/main_border"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <!-- Отцентрированное содержимое -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="top">

                <!-- Логотип -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1.3">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:layout_gravity="center"
                        android:src="@drawable/logo"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="60dp"/>
                </LinearLayout>

                <!-- Разделитель -->
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20pt"
                    android:layout_marginBottom="20pt"
                    android:layout_marginLeft="5pt"
                    android:layout_marginRight="5pt"
                    android:background="#cccccc"></LinearLayout>

                <!-- Логин -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/epid"
                    android:enabled="true"
                    android:editable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:imeOptions="actionDone"
                    android:hint="Ваш номер точки"
                    android:background="@drawable/main_btn_border"
                    android:padding="5dp"
                 />

                    <!-- Объединение Поля "Ввод пароля" и кнопки "Помощь"  -->
                  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:padding="0dp">
                        <!-- Пароль -->
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:ems="10"
                            android:id="@+id/epass"
                            android:enabled="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:editable="true"
                            android:imeOptions="actionDone"
                            android:hint="Ваш Пароль"
                            android:background="@drawable/main_btn_border"
                            android:padding="5dp"
                            android:layout_marginTop="6dp" />


                    </LinearLayout>

                <!-- Кнопка ВХОД -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="18dp"
                    android:background="@drawable/gardient_login_form_button"
                    android:text="Вход"
                    android:id="@+id/singin"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:onClick="sendMessage"  />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Версия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top|center"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_title"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>