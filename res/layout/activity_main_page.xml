<?xml version="1.0" encoding="utf-8"?>
<!-- ` Фон приложения -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/forward_grey"
    android:padding="1dp"
    android:id="@+id/activity_main_page_container">

    <!-- ` Информация о дилере -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dealerInfo"
        android:background="#E5E5E5"
        android:layout_margin="2dp"
        android:layout_weight="0.5"
        android:clickable="true"
        android:onClick="enterDealerInfo">

        <!-- ` Иконка -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dealer_icon"/>
        </LinearLayout>

        <!-- ` Контейнер данных дилера -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/gradient"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <!-- ` Контейнер для текста -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingTop="3dp"
                android:paddingLeft="20dp"
                android:paddingRight="3dp"
                android:paddingBottom="3dp">

                <!-- ` Контейнер для строки 'Дилер' -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dealer_info_name"
                        android:textSize="@dimen/dealer_info_header"/>
                    <TextView
                        android:id="@+id/dealerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Иванов Иван Иванович"
                        android:textSize="@dimen/dealer_info_header"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <!-- ` Контейнер для строки 'Баланс' -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dealer_info_balance"
                        android:textSize="@dimen/dealer_info_header"/>
                    <TextView
                        android:id="@+id/dealerBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 000 р."
                        android:textSize="@dimen/dealer_info_header"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <!-- ` Контейнер для строки 'Можно израсходовать' -->
                <LinearLayout
                    android:baselineAligned="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dealer_info_money_real"
                        android:textSize="@dimen/dealer_info_header"/>
                    <TextView
                        android:id="@+id/dealerRealMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="213 560.55 р. "
                        android:textSize="@dimen/dealer_info_header"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <!-- ` Контейнер для строки 'Кредитный лимит' -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dealer_info_kredit"
                        android:textSize="@dimen/dealer_info_header"/>
                    <TextView
                        android:id="@+id/dealerKredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 000 р."
                        android:textSize="@dimen/dealer_info_header"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="0dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- ` Обертка центрального блока ( - С белым абрисом - ) -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/main_border"
        android:layout_marginLeft="1pt"
        android:layout_marginRight="1pt"
        android:layout_weight="2">

        <!-- ` Центральный блок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <!-- ` ПРОВЕДЕНИЕ ПЛАТЕЖЕЙ. Обертка с серым абрисом -->
            <LinearLayout android:id="@+id/LinearLayout01"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/button_selector"
                android:padding="3pt"
                android:layout_weight="1"

                android:layout_marginBottom="10dp">

                <!-- Блок вертикальной отцентровки. Белая заливка -->
                <LinearLayout
                    android:id="@+id/payments_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/main_page_btn_events"
                    android:clickable="true"
                    android:onClick="enterPayments">

                    <!-- Содержимое -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- ` Иконка -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:contentDescription="@string/payments_systems"
                                android:layout_height="match_parent"
                                android:src="@drawable/dot_icon"/>
                        </LinearLayout>

                        <!-- Текст -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="6"
                            android:layout_margin="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/payments_systems"
                                android:textSize="@dimen/main_page_orangeHeader"
                                android:textColor="@color/forward_orange"
                                android:layout_marginBottom="1dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ps_description"
                                android:textSize="@dimen/main_page_block_descriptions"/>

                        </LinearLayout>

                        <!-- Стрелка перехода -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ` МОНИТОРИНГ. Обертка с серым абрисом -->
            <LinearLayout android:id="@+id/LinearLayout02"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/button_selector"
                android:padding="3pt"
                android:layout_weight="1"

                android:layout_marginBottom="10dp">

                <!-- Блок вертикальной отцентровки. Белая заливка -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/main_page_btn_events"
                    android:clickable="true"
                    android:onClick="enterMonitoring">

                    <!-- Содержимое -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- ` Иконка -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/dot_icon"/>
                        </LinearLayout>

                        <!-- Текст -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="6"
                            android:layout_margin="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/monitoring_system"
                                android:textSize="@dimen/main_page_orangeHeader"
                                android:textColor="@color/forward_orange"
                                android:layout_marginBottom="1dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ms_description"
                                android:textSize="@dimen/main_page_block_descriptions"/>

                        </LinearLayout>

                        <!-- Стрелка перехода -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ` УВЕДОМЛЕНИЯ СИСТЕМЫ. Обертка с серым абрисом -->
            <LinearLayout android:id="@+id/LinearLayout03"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector"
                android:padding="3pt"
                android:layout_weight="1"
                android:layout_marginBottom="10dp">

                <!-- Блок вертикальной отцентровки. Белая заливка -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/main_page_btn_events"
                    android:clickable="true"
                    android:onClick="enterNotifications">

                    <!-- Содержимое -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- ` Иконка -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/dot_icon"/>
                        </LinearLayout>

                        <!-- Текст -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="6"
                            android:layout_margin="2dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/notifications"
                                android:textSize="@dimen/main_page_orangeHeader"
                                android:textColor="@color/forward_orange"
                                android:layout_marginBottom="1dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/n_description"
                                android:textSize="@dimen/main_page_block_descriptions"/>

                        </LinearLayout>

                        <!-- Стрелка перехода -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ` НАСТРОЙКИ. Обертка с серым абрисом -->
            <LinearLayout android:id="@+id/LinearLayout04"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector"
                android:padding="3pt">

                <!-- Блок вертикальной отцентровки. Белая заливка -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_page_btn_events"
                    android:clickable="true"
                    android:onClick="enterSettings"
                    android:gravity="center_vertical">

                    <!-- Содержимое -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <!-- ` Иконка -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="0.4"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/dot_icon"/>
                        </LinearLayout>

                        <!-- Текст -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="6"
                            android:layout_margin="2dp"
                            android:gravity="center_vertical"
                            android:minHeight="40dp"
                            android:minWidth="350dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/settings"
                                android:textSize="@dimen/main_page_orangeHeader"
                                android:textColor="@color/forward_orange"
                                android:layout_marginBottom="1dp"/>

                        </LinearLayout>

                        <!-- Стрелка перехода -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <!-- Разделитель -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/forward_grey"/>

    <!-- Слайдер -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/gradient"
        android:layout_weight="0.5">

            <!-- Содержимое слайдера -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v4.view.ViewPager>
            </LinearLayout>

            <!-- Индикаторы -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp" android:orientation="horizontal" android:gravity="center">

                <!-- Первый индикатор -->
                <LinearLayout
                    android:id="@+id/firstDot"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@color/forward_black"
                    android:orientation="horizontal"
                    android:layout_marginLeft="0dp"/>

                <!-- Второй индикатор -->
                <LinearLayout
                    android:id="@+id/secondDot"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="3dp"
                    android:background="@color/forward_black"
                    android:orientation="horizontal"/>

                <!-- Третий индикатор -->
                <LinearLayout
                    android:id="@+id/thirdDot"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="3dp"
                    android:background="@color/forward_black"
                    android:orientation="horizontal"/>

            </LinearLayout>
    </LinearLayout>
</LinearLayout>