<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/greybg"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:isScrollContainer="true">
    <LinearLayout android:id="@+id/LinearLayoutMain"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:padding="10dp">
        <!-- Editext for Search -->
        <AutoCompleteTextView
            android:id="@+id/inputSearch"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Поиск оператора..."
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:background="@color/white"
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="Отмена"
            android:visibility="gone"  />
        <!--<EditText android:id="@+id/inputSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Поиск оператора..."
            android:inputType="textVisiblePassword"/> -->
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayoutListView" android:layout_marginTop="5dp" android:layout_height="wrap_content" android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <ListView
            android:id="@+id/listViewSearch"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayout01"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <Button
            android:layout_margin="3dp"
            android:id="@+id/Button01"
            android:padding="7dp"
            android:textSize="13dp"
            android:text="@string/main_menu_101_label"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/mobile_network"
        ></Button>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/Button02"
            android:padding="5dp"
            android:textSize="13dp"
            android:text="@string/main_menu_102_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:drawableTop="@drawable/television"></Button>
        <Button android:id="@+id/Button03" android:layout_margin="3dp" android:padding="5dp" android:textSize="13dp" android:text="@string/main_menu_103_label" android:layout_width="match_parent" android:layout_weight="1" android:layout_height="match_parent" android:background="@drawable/button_selector" android:drawableTop="@drawable/landline"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <Button android:id="@+id/Button04" android:layout_margin="3dp" android:padding="3dp" android:textSize="13dp" android:text="@string/main_menu_104_label" android:layout_width="match_parent" android:layout_weight="1" android:layout_height="match_parent" android:background="@drawable/button_selector" android:drawableTop="@drawable/internet_n_ip" android:clickable="true"></Button>
        <Button android:id="@+id/Button05" android:layout_margin="3dp" android:padding="3dp" android:textSize="13dp" android:text="@string/main_menu_105_label" android:layout_width="match_parent" android:layout_weight="1" android:layout_height="match_parent" android:background="@drawable/button_selector" android:drawableTop="@drawable/kredits" android:clickable="true"></Button>
        <Button android:id="@+id/Button06" android:layout_margin="3dp" android:padding="3dp" android:textSize="13dp" android:text="@string/main_menu_106_label" android:layout_width="match_parent" android:layout_weight="1" android:layout_height="match_parent" android:background="@drawable/button_selector" android:drawableTop="@drawable/jkh" android:clickable="true"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/LinearLayout03"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <Button android:id="@+id/Button07" android:layout_margin="3dp" android:padding="3dp" android:textSize="13dp" android:text="@string/main_menu_107_label" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="match_parent" android:background="@drawable/button_selector" android:drawableTop="@drawable/games"></Button>
        <Button android:id="@+id/Button08" android:layout_margin="3dp" android:padding="3dp" android:textSize="13dp" android:text="@string/main_menu_108_label" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="match_parent" android:background="@drawable/button_selector" android:drawableTop="@drawable/pockets"></Button>
        <Button android:id="@+id/Button09" android:layout_margin="3dp" android:padding="3dp" android:textSize="13dp" android:text="@string/main_menu_109_label" android:layout_weight="1" android:layout_height="match_parent" android:layout_width="match_parent" android:background="@drawable/button_selector" android:drawableTop="@drawable/fines"></Button>
    </LinearLayout>

</LinearLayout>